<configurations>
	<configuration> <!-- aero run configuration.xml -->
		<namespace id="parrot1">
			<vehicle type="parrot" id="parrot1" supress_warning="true" /> <!-- When not connected, no warning -->
			<sensor type="optitrack" id="opti1" />
			<connect publisher="opti1/out" listener="parrot/collission" /> <!-- EQUAL TO LINE * -->
		</namespace>
		
		<vehicle type="parrot" id="parrot2">
			<param name="leds" value="4" />
		</vehicle>


		<connect publisher="joystick1/cmd_vel" listener="parrot2/cmd_vel" />
		<connect publisher="joystick1/cmd_vel" listener="parrot1/parrot/cmd_vel" />
	</configuration>

	<configuration id="optitrack"> <!-- aero run configuration.xml optitrack -->
		<vehicle type="parrot" id="parrot1" />
		<sensor type="optitrack" id="opti1" />
		<userinput type="setpoint" id="sp1" />
		<controller type="easyPID" id="controller">
			<param name="gain" value="2" />
		</controller>
		<connect publisher="sp1/setpoint" listener="controller/setpoint" />
		<connect publisher="opti1/position" listener="controller/position" />
		<connect publisher="controller/command" listener="parrot1/cmd_vel" />
	</configuration>

	<configuration id="simple">
			<vehicle type="parrot" id="parrot1" />
			<userinput type="joystick" id="joy1" />
		<connect publisher="joy1/cmd_vel_joy" listener="parrot1/cmd_vel" />
        <connect publisher="joy1/land" listener="parrot1/land" />
        <connect publisher="joy1/reset" listener="parrot1/reset" />
        <connect publisher="joy1/takeoff" listener="parrot1/takeoff" />
	</configuration>


	<configuration id="quickstart_parrot"> <!-- Do not change or rename this, it use used for illustration in the quickstart guide -->
			<vehicle type="parrot" id="parrot1" />
			<userinput type="joystick" id="joy1">
				<param name="dev" value="/dev/input/js0" />
			</userinput>
		<connect publisher="joy1/cmd_vel_joy" listener="parrot1/cmd_vel" />
        <connect publisher="joy1/land" listener="parrot1/land" />
        <connect publisher="joy1/reset" listener="parrot1/reset" />
        <connect publisher="joy1/takeoff" listener="parrot1/takeoff" />
	</configuration>

</configurations>